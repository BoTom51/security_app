{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

   <h1>Entrez vos identifiant et mot de passe</h1>

   {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
   {% endif %}

   <form action="{{ path('security_login') }}" method="post">
      <div class="form-group">
         <label for="username">Identifiant</label>
         <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Entrez votre Email ...">
         <label for="password">Mot de passe</label>
         <input type="password" id="password" name="_password" placeholder="Entrez votre mot de passe ...">

         {# If you want to control the URL the user is redirected to on success #}
         <input type="hidden" name="_target_path" value="/account">

         <button type="submit">Connexion</button>
      </div>
    </form>

{% endblock %}
